{
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,

  "vetur.grammar.customBlocks": {
    "i18n": "json"
  },
  "files.associations": {
    "*.js.tpl": "javascript",
    "*.ts.tpl": "typescript",
    "*.yml.tpl": "yaml",
    "*.env.example": "dotenv",
  }
}
